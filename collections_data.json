                             "resolution", "print_speed", 
                             "cartridge_count", "tray_capacity",
                             "paper_format", "print_technology"],
                "properties": {
                    "manufacturer": {
                        "bsonType": "string",
                        "maximum": 50
                    },
                    "printer_name": {
                        "bsonType": "string",
                        "maximum": 50
                    },
                    "paper_weight": {
                        "bsonType": "int"
                    },
                    "colors_number": {
                        "bsonType": "int"
                    },
                    "resolution": {
                        "bsonType": "string"
                    },
                    "print_speed": {
                        "bsonType": "int",
                        "description": "pages per minute"
                    },
                    "cartridge_count": {
                        "bsonType": "int"
                    },
                    "tray_capacity": {
                        "bsonType": "int"
                    },
                    "paper_format": {
                        "bsonType": "string",
                        "oneOf": ["A3", "A4, A5"]
                    },
                    "print_technology": {
                        "bsonType": "print_technology"
                    }
                }
            }
        }
